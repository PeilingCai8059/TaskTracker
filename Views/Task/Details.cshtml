@model TaskTracker.Models.Task

@{
    ViewData["Title"] = "Details";
    var isMainTask = Model.ParentTask == null;
}

<div class="actionTitle">
    <h1>Task Details</h1>
</div>

<div>
   
    <hr />
    <dl class="row">
        <div class="task-detail">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        </div>

        <div class="task-detail">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        </div>

        <div class="task-detail">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ParentTaskId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ParentTask.Title)
        </dd>
        </div>

        <div class="task-detail">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        </div>

        <div class="task-detail">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DueDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DueDate)
        </dd>
        </div>

        <div class="task-detail">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReminderTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReminderTime)
        </dd>
        </div>

        <div class="task-detail">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
        </div>

        <div class="task-detail">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Priority)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Priority)
        </dd>
        </div>

        <div class="task-detail">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        </div>

        <div class="task-detail">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
         </div>
    </dl>
</div>
<hr>
<br>
<div>
    @if(isMainTask)
    {
        <a asp-action="CreateSubtask" asp-route-id="@Model?.Id" ><button class="create-botton"> Add Subtask </button></a>
    }
    <a asp-action="Edit" asp-route-id="@Model?.Id" ><button class="create-botton"> Edit </button></a> |
    <a asp-action="Delete" asp-route-id="@Model?.Id"><button class="create-botton"> Delete </button></a>|
    <a asp-action="Index" asp-route-id="@Model?.Id"><button class="create-botton"> Back to List </button></a> 
   
</div>
